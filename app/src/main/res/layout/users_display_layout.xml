<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_pic_ff"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/profile_image"/>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginStart="10dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <TextView
                 android:id="@+id/user_profile_name_ff"
                 android:layout_width="200dp"
                 android:layout_height="wrap_content"
                 android:text="Username"
                 android:textAlignment="textStart"
                 android:textSize="18sp"
                 android:textStyle="bold"/>
             <ImageView
                 android:id="@+id/users_online_status"
                 android:layout_width="15dp"
                 android:layout_height="15dp"
                 android:src="@drawable/online"
                 android:layout_marginTop="5dp"
                 android:visibility="invisible"/>
         </LinearLayout>

         <TextView
             android:id="@+id/user_status_ff"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="User Status"
             android:textAlignment="textStart"
             android:textSize="16sp" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="8dp"
             >
             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="30dp"
                 android:id="@+id/request_accept_button"
                 android:text="Accept"
                 android:textSize="16sp"
                 android:textAllCaps="false"
                 android:textColor="@color/colorAccent"
                 android:background="#047E0B"
                 android:layout_marginEnd="15dp"
                 android:visibility="invisible"/>

             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="30dp"
                 android:id="@+id/request_Reject_button"
                 android:text="Reject"
                 android:textSize="16sp"
                 android:textAllCaps="false"
                 android:textColor="@color/colorAccent"
                 android:background="#BE0202"
                 android:visibility="invisible"/>

         </LinearLayout>

     </LinearLayout>







    </LinearLayout>

</RelativeLayout>